@model HandleErrorInfo
@{
    ViewBag.Title = ": Painel de Controle Íntegra Medical :";
    Layout = "~/Views/Shared/_LayoutMaster.error.cshtml";
}

<div class="error-container">

    <div class="well">
        <h1 class="grey lighter smaller">
            <span class="blue bigger-125">500</span> Ocorreu um erro
        </h1>
        <hr />
        <h3 class="lighter smaller">Mas estamos trabalhando nisso! </h3>

        <div class="space"></div>
        <div>
            @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
            {
                <div>
                    <p>
                        <b>Exception:</b> @Model.Exception.Message<br />
                        <b>Controller:</b> @Model.ControllerName<br />
                        <b>Action:</b> @Model.ActionName
                    </p>
                    <div style="overflow: scroll">
                        <pre>
                    @Model.Exception.StackTrace
                </pre>
                    </div>
                </div>
            }
        </div>

        <hr />
        <div class="space"></div>

        <div class="row-fluid">
            <div class="center">
                <a href="@Url.Action("Index", "Home", new { })" class="btn btn-grey">
                        <i class='icon-home'></i>Ínicio
                    </a>
            </div>
        </div>
    </div>
</div>
